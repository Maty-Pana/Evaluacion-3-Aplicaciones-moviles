<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel de Administración"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_gravity="start"
        android:layout_marginBottom="32dp" />

    <!-- Gestión de Productos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGestionProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/colorGestionProductosLight">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_shopping_cart"
                android:layout_marginEnd="16dp"
                app:tint="@color/colorGestionProductos" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Productos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGestionProductos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrar inventario y catálogo"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:rotation="180"
                app:tint="@color/colorGestionProductos" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Gestión de Usuarios -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGestionUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/colorGestionUsuariosLight">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="16dp"
                app:tint="@color/colorGestionUsuarios" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Usuarios"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGestionUsuarios" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrar cuentas de usuarios"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:rotation="180"
                app:tint="@color/colorGestionUsuarios" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Gestión de Órdenes -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGestionOrdenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/colorGestionOrdenesLight">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"
                android:layout_marginEnd="16dp"
                app:tint="@color/colorGestionOrdenes" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Órdenes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGestionOrdenes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrar pedidos y entregas"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:rotation="180"
                app:tint="@color/colorGestionOrdenes" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
