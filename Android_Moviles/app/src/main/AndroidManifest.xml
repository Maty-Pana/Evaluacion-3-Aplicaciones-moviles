<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.janispaxano.JaniSPAKotlinAPP">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JaniSPAKotlinAPP"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.admin.GestorOrdenesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.OrderDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.admin.GestorOrdenesActivity" />
        <activity
            android:name=".ui.admin.GestorUsuaiosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.GestorProductosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cliente.MyOrdersActivity"
            android:exported="false"
            android:parentActivityName=".ui.cliente.ClienteHomeActivity" />
        <activity
            android:name=".ui.cliente.OrderDetailClientActivity"
            android:exported="false"
            android:parentActivityName=".ui.cliente.MyOrdersActivity" />
        <activity
            android:name=".ui.cliente.ProductDetailActivity"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.JaniSPAKotlinAPP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.admin.AdminHomeActivity" />
        <activity android:name=".ui.cliente.ClienteHomeActivity" />
    </application>

</manifest>